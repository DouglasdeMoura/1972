{
  "extends": "stylomatic/node-library.json",
  "compilerOptions": {
    "outDir": "dist",
    "strict": false,
    "isolatedModules": false,
    "allowJs": true,
    "checkJs": true,
    "baseUrl": ".",
    "types": [
      "vitest/globals"
    ]
  },
  "include": [
    "./src",
    "./test",
    "./tests"
  ],
  "exclude": [
    "**/__tests__/",
    "test/fixtures",
    "node_modules",
    "**/node_modules/*"
  ]
}
