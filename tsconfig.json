{
  "extends": "stylomatic/node-library.json",
  "compilerOptions": {
    "outDir": "dist",
    "strict": false,
    "isolatedModules": false,
    "allowJs": true,
    "checkJs": true
  },
  "include": [
    "./src",
    "./test"
  ],
  "exclude": [
    "**/__tests__/",
    "test/fixtures",
    "node_modules",
    "**/node_modules/*"
  ]
}
